<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".profile.ProfileFragment">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/primary"

        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rizky Khairullah" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        tools:text="nananana@gmail.com" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_semi_bold"
        android:padding="16dp"
        android:text="@string/kajian_history"
        android:textColor="@color/accent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_username"
        app:layout_constraintStart_toStartOf="@id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_email" />


    <TextView
        android:id="@+id/tv_change_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_semi_bold"
        android:padding="16dp"
        android:text="@string/update_profile"
        android:textColor="@color/accent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_history"
        app:layout_constraintStart_toStartOf="@id/tv_history"
        app:layout_constraintTop_toBottomOf="@id/tv_history" />

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_semi_bold"
        android:padding="16dp"
        android:text="@string/change_password"
        android:textColor="@color/accent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_change_email"
        app:layout_constraintStart_toStartOf="@id/tv_change_email"
        app:layout_constraintTop_toBottomOf="@id/tv_change_email" />


    <TextView
        android:id="@+id/tv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_semi_bold"
        android:padding="16dp"
        android:text="@string/about_us"
        android:textColor="@color/accent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_change_password"
        app:layout_constraintStart_toStartOf="@id/tv_change_password"
        app:layout_constraintTop_toBottomOf="@id/tv_change_password" />

    <TextView
        android:id="@+id/tv_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/montserrat_semi_bold"
        android:padding="16dp"
        android:text="@string/log_out"
        android:textColor="@color/accent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_about_us"
        app:layout_constraintStart_toStartOf="@id/tv_about_us"
        app:layout_constraintTop_toBottomOf="@id/tv_about_us" />

</androidx.constraintlayout.widget.ConstraintLayout>